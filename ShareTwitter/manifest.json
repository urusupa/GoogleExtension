{
  "name": "ShareTwitter",
  "manifest_version": 2,
  "version": "1.0",

  "description": "Share to twitter the link",
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "256": "icon256.png"
  },

  "browser_action": {
    "default_icon": "icon32.png",
    "default_title": "Share!"
  },

  "background":{
      "scripts":["background.js"]
  },
  "minimum_chrome_version": "1.0",
  "options_page": "options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}